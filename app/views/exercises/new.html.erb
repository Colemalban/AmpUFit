<div class="centered-form">	
	<h1>
	Create a new exercise
	</h1>

	<%= form_for @exercise,url:{action:"create"},html:{role:"form"} do |f| %>
		<% if @exercise.errors.any? %>
		<div id=“error_explanation”>
			<h2><%= pluralize(@exercise.errors.count, “error”) %> prohibited this workout from being saved</h2>
	<ul>
	<% @exercise.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
	</ul>
	</div>
	<%end%>
	<div class=“form-group”>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</div>

	<div class=“form-group”>
		<%= f.label :description %><br>
		<%= f.text_area :difficulty %>
	</div>

	<div class=“actions”>
		<%= f.submit %>
	</div>
	<% end %>
</div>
