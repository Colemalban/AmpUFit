<div class="row">
	<div class="col-md-6">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>Equipment</th>
				</tr>
				<tr>
					<td><%=@exercise.name%></td>
					<td><%=@exercise.difficulty%></td>
					<% if @exercise.equipment == nil %>
					<td>N/A</td>
					<% else %>
					<td><%= @exercise.equipment %> </td>
					<%end%>
				</tr>
			</thead>
		</table>
	</div>
	<div class="col-md-6">
		<div class="row">

		<div class="col-md-4">
			<button style="float: left;"type="button" class="btn btn-default btn-lg">
			<div class="row"><span style="align: center;"class="glyphicon glyphicon-ok"></span></div>
			<div class="row"><p class="lead">Endorse</p></div>
			</button>
		</div>
		<% if @exercise.votes == nil %>
		<% @exercise.votes = 0 %>
		<% @exercise.save %>
		<% end %>
		<div class="col-md-3">
			<button type="button" class="btn btn-default btn-lg">
			<div class="row-center"><span style="align: center;"class="glyphicon glyphicon-floppy-disk"></span></div>
			<div class="row"><p class="lead">Save for Later</p></div>
			</button>
		</div>
		<div class="col-md-5">
			<button style="float: right;" type="button" class="btn btn-default btn-lg">
			<div class="row-center"><span style="align: center;"class="glyphicon glyphicon-remove"></span></div>
			<div class="row"><p class="lead">Amputate</p></div>
			</button>
		</div>
		
	</div>	
		<div class="row-center">
		<div class="col-md-12">
		<h1 style="text-align: center;"> Current Popularity: <%= @exercise.votes %>	</h1></div></div></div>
