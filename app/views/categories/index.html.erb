<div class="main_container">
<div class="row">
	<%=@categories.each do |var|%>
		<div class="col-md-4">
			<div class="thumbnail">
                <% if var.id==1%>
					<%= link_to "#{image_tag("Legs1")}".html_safe,category_path(1)%>
                <%elsif var.id==2%>
					<%=link_to "#{image_tag("arm_img")}".html_safe,category_path(2)%>
                <%else%>
                    <%=link_to "#{image_tag("other_img")}".html_safe,category_path(3)%>
                <%end%>
                
			</div>
		</div>
	<%end%>
</div>
</div>
