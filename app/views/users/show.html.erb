<div class=".text-center">
	<h2><%=@user.user_name%></h2>
</div>
<div class="row">
	<div class='col-md-6'>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>email</th>
					<th>Date joined</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%=@user.user_name%></td>
					<td><%=@user.email%></td>
					<td><%=@user.created_at%></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class='col-md-6'>
	<h1>Favorite Exercises</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Equipment</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				<%@favorites.each do |var|%>
					<tr>
						<th><%=var.exercise.name%></th>
						<th><%=var.exercise.equipment%></th>
						<th><%=var.exercise.difficulty%></th>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>
